<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/include_background"/>

    <ScrollView
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical" android:padding="24dp"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <ImageView
                android:layout_width="84dp" android:layout_height="84dp"
                android:src="@drawable/logo_solo_futbol" android:layout_gravity="center_horizontal"
                android:layout_marginTop="56dp"/>

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="SOLOFUTBOL" android:textStyle="bold" android:textSize="22sp"
                android:textColor="@color/sf_text" android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="18dp" app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical" android:padding="18dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etUsuario"

                            android:hint="Usuario" android:inputType="textPersonName"
                            android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etClave"
                            android:hint="ContraseÃ±a" android:inputType="textPassword"
                            android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIngresar"
                        android:text="Ingresar"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
